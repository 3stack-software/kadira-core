{
  "name": "kadira-core",
  "version": "1.0.0",
  "description": "Handle authentication, metric collection and delivery",
  "main": "./build/",
  "options": {
    "mocha": "--require scripts/mocha-bootload src/**/__tests__/**/*.js"
  },
  "babel": {
    "optional": [
      "runtime",
      "es7.asyncFunctions"
    ]
  },
  "scripts": {
    "prepublish": "./scripts/prepublish.sh",
    "lint": "./node_modules/.bin/eslint ./src",
    "lintfix": "./node_modules/.bin/eslint ./src --fix",
    "testonly": "./node_modules/.bin/mocha $npm_package_options_mocha",
    "test": "npm run lint && npm run testonly"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kadirahq/kadira-core.git"
  },
  "keywords": [
    "kadira"
  ],
  "author": "Kadira Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kadirahq/kadira-core/issues"
  },
  "homepage": "https://github.com/kadirahq/kadira-core#readme",
  "devDependencies": {
    "babel-cli": "6.x.x",
    "babel-core": "6.x.x",
    "babel-polyfill": "6.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-stage-2": "6.x.x",
    "babel-plugin-transform-runtime": "6.x.x",
    "babel-eslint": "4.x.x",
    "boom": "2.10.x",
    "chai": "3.x.x",
    "eslint": "1.7.x",
    "eslint-plugin-babel": "2.x.x",
    "hapi": "11.0.x",
    "mocha": "2.x.x"
  },
  "dependencies": {
    "babel-runtime": "6.x.x",
    "bluebird": "3.x.x",
    "debug": "2.x.x",
    "isomorphic-fetch": "2.2.x"
  }
}
